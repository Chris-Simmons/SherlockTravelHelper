<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="e.chris.sherlocktravelhelper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_globe"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_globe"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".displayHelper">
        <activity android:name=".mainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".calendar"
            android:label="Calendar"
            android:parentActivityName=".mainMenu" />
        <activity android:name=".calendarAllEvents"
            android:label="All Trips"
            android:parentActivityName=".calendar" />
        <activity android:name=".calendarCreateEvent"
            android:label="Create a Trip"
            android:parentActivityName=".calendarCreateEvent" />
        <activity android:name=".calendarEditEvent"
            android:label="Update a Trip"
            android:parentActivityName=".calendarEditEvent" />
        <activity android:name=".calendarSingleEvent"
            android:label="Your Trip"
            android:parentActivityName=".calendar" />
        <activity android:name=".specific"
            android:label="World"
            android:parentActivityName=".mainMenu"/>
        <activity android:name=".documents"
            android:label="Documents"
            android:parentActivityName=".mainMenu"/>
        <activity android:name=".documentsConstitution"
            android:label="U.S. Constitution"
            android:parentActivityName=".documents"/>
        <activity android:name=".documentsUDHR"
            android:label="U.D.H.R."
            android:parentActivityName=".documents"/>
        <activity android:name=".documentsVCCR"
            android:label="V.C.C.R."
            android:parentActivityName=".documents"/>
        <activity android:name=".bulletin"
            android:label="Visa Bulletin"
            android:parentActivityName=".mainMenu" />
        <activity android:name=".definitions"
            android:label="Definitions"
            android:parentActivityName=".mainMenu" />
    </application>
</manifest>